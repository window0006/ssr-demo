{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@ssr-demo/components": ["../components/src"],
      "@ssr-demo/client/*": ["../client/src/*"]
    }
  },
  "include": ["src/**/*", "../client/src/**/*"],
  "exclude": ["node_modules"]
} 